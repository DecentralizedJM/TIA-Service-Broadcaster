# Environment variables for local development
# Copy to .env and fill in your values

# Required - Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather

# Required - Your Telegram user ID (get from @userinfobot)
ADMIN_TELEGRAM_ID=123456789

# Required - Your signal channel ID (negative number)
SIGNAL_CHANNEL_ID=-1001234567890

# Required - Encryption secret (run: python -m signal_bot.run --generate-secret)
ENCRYPTION_SECRET=your_32_char_secret_here

# Optional - Webhook URL (Railway provides this automatically)
# WEBHOOK_URL=https://your-app.up.railway.app

# Optional - Server settings
HOST=0.0.0.0
PORT=8000

# Optional - Database path
DATABASE_PATH=subscribers.db

# Optional - Trading defaults
DEFAULT_TRADE_AMOUNT=50.0
DEFAULT_MAX_LEVERAGE=10

# Optional - Feature flags
ALLOW_REGISTRATION=true
